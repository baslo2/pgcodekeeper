<?xml version="1.0" encoding="UTF-8"?>
<project
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

<!--
файлы версионирования:

~~~~~~~~ DEPRECATED ~~~~~~~~
Use /script/update-version.sh NEW-VERSION
to update all relevant poms and metadatas

    фича:
    ru.taximaxim.codekeeper.mainapp/feature/feature.xml
    ru.taximaxim.codekeeper.mainapp/feature/pom.xml
    
    branding plugin:
    ru.taximaxim.codekeeper.mainapp/META-INF/MANIFEST.MF
    ru.taximaxim.codekeeper.mainapp/pom.xml
    
    product (rcp):
    ru.taximaxim.codekeeper.mainapp/product/rcp/*.product
    ru.taximaxim.codekeeper.mainapp/product/rcp/pom.xml
    
    product (стендэлон апгдифф):
    ru.taximaxim.codekeeper.mainapp/product/standalone/*.product
    ru.taximaxim.codekeeper.mainapp/product/standalone/pom.xml
    
    update site:
    ru.taximaxim.codekeeper.mainapp/updatesite/pom.xml
    
    this file:
    property 'global.version' (also updated by the script)
 -->

    <modelVersion>4.0.0</modelVersion>
    <groupId>ru.taximaxim.codeKeeper</groupId>
    <artifactId>ru.taximaxim.codeKeeper</artifactId>
    <version>${global.version}</version>
    <packaging>pom</packaging>
    <modules>
        <module>apgdiff</module>
        <module>apgdiff.tests</module>
        <module>ru.taximaxim.codekeeper.ui</module>
        <module>ru.taximaxim.codekeeper.ui.tests</module>
        <module>ru.taximaxim.codekeeper.cli</module>
        <module>ru.taximaxim.codekeeper.cli.tests</module>
        <module>ru.taximaxim.codekeeper.mainapp</module>
        <module>ru.taximaxim.codekeeper.mainapp/feature</module>
        <module>ru.taximaxim.codekeeper.mainapp/updatesite</module>
        <module>ru.taximaxim.codekeeper.mainapp/product/rcp</module>
        <module>ru.taximaxim.codekeeper.mainapp/product/standalone</module>
    </modules>

    <properties>
        <global.version>5.9.7-SNAPSHOT</global.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
        <tycho.version>1.5.1</tycho.version>
        <target.definition.file>app</target.definition.file>

        <sonar.language>java</sonar.language>
        <sonar.java.binaries>${project.basedir}/target/classes</sonar.java.binaries>
        <sonar.java.source>1.8</sonar.java.source>
        <sonar.core.coveragePlugin>jacoco</sonar.core.coveragePlugin>
        <sonar.junit.reportPath>${project.basedir}/target/surefire-reports/</sonar.junit.reportPath>
    </properties>

    <profiles>
        <profile>
            <id>jenkins</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.jacoco</groupId>
                        <artifactId>jacoco-maven-plugin</artifactId>
                        <version>0.7.9</version>
                        <configuration>
                            <!-- задать при запуске мавена -->
                            <destFile>${sonar.jacoco.reportPaths}</destFile>
                            <append>true</append>
                        </configuration>
                        <executions>
                            <execution>
                                <goals>
                                    <goal>prepare-agent</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <version>2.19.1</version>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-surefire-report-plugin</artifactId>
                        <version>2.19.1</version>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>deploy-product-github</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>com.ragedunicorn.tools.maven</groupId>
                        <artifactId>github-release-maven-plugin</artifactId>
                        <version>1.0.1</version>
                        <executions>
                            <execution>
                                <phase>deploy</phase>
                                <goals>
                                    <goal>github-release</goal>
                                </goals>
                                <configuration>
                                    <owner>pgcodekeeper</owner>
                                    <repository>pgcodekeeper</repository>
                                    <authToken>${env.GITHUB_TOKEN}</authToken>
                                    <tagName>v${unqualifiedVersion}</tagName>
                                    <name>pgCodeKeeper ${unqualifiedVersion}</name>
                                    <assets>
                                        <asset>ru.taximaxim.codekeeper.mainapp/product/stanalone/target/products/pgCodeKeeper-cli-${unqualifiedVersion}.zip</asset>
                                        <asset>ru.taximaxim.codekeeper.mainapp/product/rcp/target/products/pgCodeKeeper-${unqualifiedVersion}-win32.win32.x86_64.zip</asset>
                                        <asset>ru.taximaxim.codekeeper.mainapp/product/rcp/target/products/pgCodeKeeper-${unqualifiedVersion}-linux.gtk.x86_64.tar.gz</asset>
                                        <asset>ru.taximaxim.codekeeper.mainapp/product/rcp/target/products/pgCodeKeeper-${unqualifiedVersion}-macosx.cocoa.x86_64.tar.gz</asset>
                                    </assets>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>internal</id>
            <modules>
                <module>../codekeeper-internal/ru.taximaxim.codekeeper.internal.tests</module>
                <module>../codekeeper-internal/ru.taximaxim.codekeeper.internal.ui.tests</module>
            </modules>
        </profile>
        <profile>
            <id>neon</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <target.definition.file>app_neon</target.definition.file>
            </properties>
        </profile>
    </profiles>

    <build>
        <plugins>
            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-compiler-plugin</artifactId>
                <version>${tycho.version}</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>tycho-maven-plugin</artifactId>
                <version>${tycho.version}</version>
                <extensions>true</extensions>
            </plugin>

            <plugin>
                <groupId>org.eclipse.tycho</groupId>
                <artifactId>target-platform-configuration</artifactId>
                <version>${tycho.version}</version>
                <configuration>
                    <resolver>p2</resolver>
                    <target>
                        <artifact>
                            <groupId>ru.taximaxim.codeKeeper</groupId>
                            <artifactId>ru.taximaxim.codeKeeper</artifactId>
                            <version>${global.version}</version>
                            <classifier>ru.taximaxim.codekeeper.mainapp/${target.definition.file}</classifier>
                        </artifact>
                    </target>
                    <pomDependencies>consider</pomDependencies>
                    <environments>
                        <environment>
                            <os>linux</os>
                            <ws>gtk</ws>
                            <arch>x86_64</arch>
                        </environment>
                    </environments>
                    <dependency-resolution>
                        <!-- workaround for split package import
                             allows apgdiff to not require any bundles -->
                        <extraRequirements>
                            <requirement>
                                <type>eclipse-plugin</type>
                                <id>org.eclipse.core.runtime</id>
                                <versionRange>[3.4.0,4.0.0)</versionRange>
                            </requirement>
                        </extraRequirements>
                    </dependency-resolution>
                </configuration>
            </plugin>
            
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-deploy-plugin</artifactId>
                <version>2.8.2</version>
                <executions>
                    <execution>
                        <id>default-deploy</id>
                        <phase>none</phase>
                    </execution>
                </executions>
            </plugin>
        </plugins>
        <extensions>
            <extension>
                <groupId>org.apache.maven.wagon</groupId>
                <artifactId>wagon-ssh</artifactId>
                <version>2.12</version>
            </extension>
        </extensions>
    </build>
</project>
